{
    "name": "pyxol/pulsar",
    "type": "project",
    "description": "A base implementation of the Magnetar framework.",
    "keywords": ["framework", "pulsar"],
    "license": "MIT",
    "homepage": "https://pyxol.com",
    "support": {
        "issues": "https://github.com/pyxol/pulsar/issues",
        "source": "https://github.com/pyxol/pulsar"
    },
    "authors": [
        {
            "name": "Don Wilson",
            "email": "don@pyxol.com",
			"homepage": "https://pyxol.com/",
			"role": "Lead Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "pyxol/magnetar": "dev-master"
    },
    "require-dev": {
        "filp/whoops": "^2.15",
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}